
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-light">
            <tr class="align-content-md-center">
                <th>Name</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th><input type ="checkbox" @onchange ="@(()=>displayButtons = !displayButtons)" /></th>
                <th/>
            </tr>
        </thead>
        <tbody>
            @if (Games == null)
            {
                <tr>Loading Date.....</tr>
            }
            else if (Games.Count == 0)
            {
                <tr>NoItems in Array</tr>
            }
            else
            {
            @foreach (var item in Games)
            {
                <IndividualGame Game="@item" IsTable="true" DisplayBattons="@displayButtons"/>
                @*<tr>
                    <td>@item.Name</td>
                    <td>@item.Genre</td>
                    <td>@item.ReleaseDate.ToString("d")</td>
                </tr>*@
            }
            }
        </tbody>
    </table>
</div>


@code
{
    [Parameter] public List<Game> Games { get; set; }
    [Parameter] public bool displayButtons { get; set; } = false;

}